% Tableau de suivi des modifications des CR
\newenvironment{suiviModifications}[1][Modifications CR]{
  \section*{Suivi des modifications}
  \normalsize{}
    \begin{longtable}{|p{0.12\linewidth}|p{0.17\linewidth}|p{0.33\linewidth}|p{0.3\linewidth}|}
      \hline
	\rowcolor[gray]{0.8}
	Date & Auteur & Modifications demandées & Modifications effectuées \\
      \hline
      \endhead
    }
    {
    \end{longtable}
}

\newcommand{\uneModification}[4]{
  #1 & #2 & #3 & #4 \\
  \hline
}
