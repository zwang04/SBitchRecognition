% Commande de vérification
\definecolor{rougeCorrection}{rgb}{1.0,0.4,0.5}
\definecolor{bleuCommentaire}{rgb}{0.3,0.4,1.0}
\newcommand{\corriger}[2]{\noindent{} \$\$ \\ \colorbox{rougeCorrection}{\parbox{\linewidth}{#1}} \colorbox{bleuCommentaire}{\parbox{\linewidth}{\textbf{COMMENTAIRE POUR CORRECTION :} \\ #2 ~\\}}}
