\begin{frame}{Mise en place de la Qualité }

\begin{itemize}
 \item Organiser une réunion formelle de démarrage;
 \item Faire les fiches de rôle, fiches de compétences, fiches de formation;
 \item Définition des objectifs et les Indicateurs;
 \item Rédiger le Plan Qualité (PQ);
 \item Rédiger le Plan de Gestion des Configurations (PGC).
 
\end{itemize}

\end{frame}

\begin{frame}{Tableau de Bord}
\begin{itemize}
	\item Permet de visualiser le respect des objectifs:
		\begin{itemize}
			\item Assurer l'avancement du projet;
			\item Assurer la conformité des produits;
			\item Assurer le respect des délais;
			\item Assurer une bonne communication;
			\item Assurer l'efficience du traitement des Faits Techniques.
		\end{itemize}
\end{itemize}
\end{frame}

\begin{frame}{ Mise en place des indicateurs}
\begin{itemize}
	\item Objectifs de mise en place des indicateurs:
		\begin{itemize}
		\item Suivre l'avancement du projet;
		\item Vérifier la conformité des produits;
		\item Mesurer la réactivité du cycle de traitement des Faits Techniques;
		\item Vérifier la continuité de la communication interne et externe à l'équipe;
		\item Mesurer la satisfaction du client.
		\end{itemize}
	\\
	\item Tableau de Bord:
	\begin{itemize}
	 \item Permet de visualiser le respect des objectifs.
	\end{itemize}

	
\end{itemize}
\end{frame}

