\begin{frame}{Récupération des données}
	\begin{itemize}
		\item Sélection de la donnée étudiée;
		\pause
		\item Sélection de la partie des valeurs, pour chaque dimension \textit{(scope)}~:
			\begin{itemize}
				\pause
				\item Tout;
				\item Ensemble de valeur.
			\end{itemize}
		\pause
		\item Agrégation des valeurs sélectionnées \textit{(dice)}~:
		\pause
			\begin{itemize}
				\item Choix du niveau pour chaque dimension sur laquelle on veut un «\textit{dice}»;
				\item Agrégation totale des autres dimensions;
				\item Choix de la fonction d'agrégation (somme, moyenne, min, max, ...).
			\end{itemize}
	\end{itemize}
\end{frame}

